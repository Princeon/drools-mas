import org.drools.mas.persistence.tests.model.MathResponse;


query getMathResponses(String messageId, MathResponse result)
    result:=MathResponse(msgId == messageId)
end

rule "Action_Request : add"
when
    $a : Action( actionName == "add",
                 $msgId: msgId,
                 keySet contains "x", $x : this["x"],  
                 keySet contains "y", $y : this["y"]  )

then
    Double x = (Double) $x;
    Double y = (Double) $y;
    Double z = x + y;
    insert( new MathResponse($msgId, x, y, z ) );
end

rule "Action_Request : add - Result "
    when
        $s : SessionLocator($nodeId: nodeId, $sessionId: sessionId, mind == true)
        $a : Action( actionName == "add", $msgId: msgId)
        $r : MathResponse(msgId == $msgId)
        
    then
       retract($a);
       ResponseContent.deliverResponse( $sessionId, $msgId, $r, null );
end



